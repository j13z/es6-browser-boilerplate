    "browserify": "^13.0.0",
    "chai": "^3.5.0",
    "chalk": "^1.1.3",
    "del": "^2.2.0",
    "eslint": "^2.9.0",
    "eslint-plugin-react": "^5.1.1",
    "gulp": "^3.9.0",
    "gulp-autoprefixer": "^3.1.0",
